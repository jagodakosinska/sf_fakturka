{% extends 'base.html.twig' %}

{% block title %}Rachunki
{% endblock %}

{% block body %}

	{% if accounts|length > 0 %}
		<div class="row mt-3">
			<div class="col-2 pl-3">Lista Rachunków:
				<hr></div>
			<div class="col-6">
				<table class="table table table-striped table-hover">
					<thead>
						<tr>
							<th scope="col-3">Lp.</th>
							<th scope="col-3">Nazwa</th>
							<th scope="col-3">Numer</th>
							<th scope="col-1">Edycja</th>
							<th scope="col-1">Usuń</th>
						</tr>
					</thead>
					<tbody>

						{% for account in accounts %}
							<tr>
								<td>{{ loop.index }}</td>
								<td>{{ account.name }}</td>
								<td>{{ account.number }}
								</td>
								<td>
									<a href="{{ path('bank_account_edit', {id: account.id})}}" class='link-success'>
										<i class="fas fa-edit"></i>
									</a>
								</td>
								<td>
									<a href="{{ path('bank_account_delete', {id: account.id})}}" onclick="return confirm('Na pewno chcesz usunąć rachunek?')" class='link-danger'>
										<i class="fas fa-trash"></i>
									</a>
								</td>

							{% endfor %}

						</tbody>
					</tbody>
				</table>
				<a href="{{ path('bank_account_add')}}" class="btn btn-primary">Dodaj Rachunek</a>
			</div>
			<div class="col-4"></div>

		</div>
	{% else %}
		<span class="info_acc">Brak rachunków bankowych</span>
	{% endif %}


{% endblock %}
